<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:paddingTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Status : Not connect"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:text="Coil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_coil"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_status"/>

    <EditText
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/edit_coil_address"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_coil"/>

    <EditText
        android:layout_width="111dp"
        android:layout_height="46dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/edit_coil_value"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_coil"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/edit_coil_address"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:text="Simple register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_simple_reg"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_send_coil"/>

    <EditText
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/edit_register_address"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_simple_reg"
        />

    <EditText
        android:layout_width="115dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/edit_register_value"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_simple_reg"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/edit_register_address"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_register_address"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send_coil"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_coil_value"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_read_bytes"
        app:layout_constraintTop_toBottomOf="@+id/txt_status"
        android:layout_marginEnd="100dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="100dp"/>


</android.support.constraint.ConstraintLayout>